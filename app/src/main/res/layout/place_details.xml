<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_route_button"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:elevation="2dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#f8f8f8"
        app:cardCornerRadius="2dp"
        app:cardElevation="11dp">

        <TextView
            android:id="@+id/distance"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="12dp"
            android:autoSizeMaxTextSize="120sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:text="Select a Route"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/destination_name"
            android:layout_width="226dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="12dp"
            android:autoSizeMaxTextSize="60sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:text="--"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/destination_name"
            app:layout_constraintVertical_bias="0.069" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="12dp"
            android:text="99%"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/roundedbutton"
            android:drawableLeft="@drawable/ic_navigation_black_24dp"
            android:padding="0dp"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:text="Start"
            android:textColor="#FFFFFF"
            android:onClick="startRoute"/>

    </android.support.v7.widget.CardView>

    <!--android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="13dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_directions_walk_black_24dp" /-->


</RelativeLayout>